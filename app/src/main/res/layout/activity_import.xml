<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/colorSurface"
    tools:context="com.dandomi.pufas.ImportDatabaseActivity">

    <LinearLayout
        android:id="@+id/titlePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:gravity="center_vertical"
        android:minHeight="64dp"
        android:paddingHorizontal="4dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/back_button_desc"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/import_database"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/saveBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/save_desc"
            android:src="@drawable/ic_save"
            android:visibility="gone"
            app:tint="?attr/colorPrimary" />

        <ImageButton
            android:id="@+id/splitViewBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/split_view_desc"
            android:src="@drawable/ic_splitscreen"
            app:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/menuBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/menu_desc"
            android:src="@drawable/ic_menu"
            app:tint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <include
        android:id="@+id/menu"
        layout="@layout/activity_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePanel"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:visibility="gone" />

    <View
        android:id="@+id/dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/searchUrlView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:translationY="-100dp"
        android:visibility="gone"
        android:weightSum="1">

        <EditText
            android:id="@+id/urlSearch"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:autofillHints="Enter url"
            android:background="@drawable/outline_background"
            android:hint="@string/enter_url"
            android:imeOptions="actionSearch"
            android:inputType="textUri"
            android:paddingHorizontal="24dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:background="@drawable/ripple_list2"
            android:contentDescription="@string/search_desc"
            android:onClick="SearchUrl"
            android:src="@drawable/ic_search"
            app:tint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlePanel"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/searchTxt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:autofillHints="Enter search"
            android:background="@drawable/outline_background"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="textUri"
            android:paddingHorizontal="24dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/searchChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/searchChipKey"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/key" />

            <com.google.android.material.chip.Chip
                android:id="@+id/searchChipValue"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:foreground="@drawable/foreground"
            android:paddingTop="8dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlePanel"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/listRL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minWidth="50dp"
            android:minHeight="50dp"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/messageLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background5"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/messageTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tap_the_item_to_edit"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/messageBtn"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="DoneEdit"
                    android:text="@string/done" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageLL"
                android:clipToPadding="false"
                android:divider="@null"
                android:foreground="@drawable/foreground"
                android:listSelector="@drawable/transparent_drawable"
                android:paddingBottom="88dp"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:clipChildren="false">

                <com.google.android.material.floatingtoolbar.FloatingToolbarLayout
                    android:id="@+id/floating_toolbar"
                    style="?attr/floatingToolbarVibrantStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/importFab"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5dp"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/searchBtn"
                            android:layout_width="60dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ripple2"
                            android:contentDescription="@string/search_button"
                            android:src="@drawable/ic_search"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <RelativeLayout
                            android:id="@+id/editBtn"
                            android:layout_width="60dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ripple2">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:contentDescription="@string/edit"
                                android:src="@drawable/ic_edit"
                                app:tint="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/ripple_red"
                                android:paddingHorizontal="6dp"
                                android:text="@string/beta"
                                android:textColor="?attr/colorOnError"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <ImageButton
                            android:id="@+id/filterBtn"
                            android:layout_width="60dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ripple2"
                            android:contentDescription="@string/filter_button"
                            android:src="@drawable/ic_filter"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </com.google.android.material.floatingtoolbar.FloatingToolbarLayout>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/importFab"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:icon="@drawable/database_upload_24px"
                    android:text="@string/import_db"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/floating_toolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/floating_toolbar"
                    app:layout_constraintTop_toTopOf="@id/floating_toolbar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/emptyListTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/list_is_empty"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/fileImg"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_above="@id/openFileBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:background="@drawable/ic_open_file_foreground"
                android:backgroundTint="?attr/colorSecondaryContainer"
                android:contentDescription="@string/file_image"
                android:rotation="-10"
                android:scaleX="1.2"
                android:scaleY="1.2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/openFileBtn"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/open_file" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/openUrlBtn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/openFileBtn"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:text="@string/open_from_url" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Custom0"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1" />

        <RelativeLayout
            android:id="@+id/rawJsonRL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/split_view_bg"
                android:orientation="vertical"
                android:visibility="visible">

                <WebView
                    android:id="@+id/rawJsonWV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/resizeSplitViewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:clickable="false"
            android:padding="15dp"
            android:scaleX=".5"
            android:scaleY=".5"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rawJsonRL">

            <View
                android:id="@+id/resizeSplitViewBtnLine"
                android:layout_width="64dp"
                android:layout_height="6dp"
                android:background="?attr/colorOnSurfaceVariant"
                android:backgroundTint="?attr/colorOutline" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loadingView"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:animateLayoutChanges="true"
            android:minWidth="200dp"
            android:visibility="invisible"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/loadingTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_data_from_file"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:indeterminate="true"
                    android:max="100"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorSurfaceContainerHighest"
                    app:trackCornerRadius="4dp"
                    app:waveAmplitude="2dp"
                    app:waveSpeed="20dp"
                    app:wavelength="30dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pathListBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pathList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/background3"
            android:listSelector="@drawable/transparent_drawable" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dropTarget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:backgroundTintMode="add"
        android:layout_margin="16dp">

        <View
            android:id="@+id/dropTargetBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".8"
            android:background="?attr/colorPrimaryContainer" />

        <TextView
            android:id="@+id/dropTargetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingBottom="30dp"
            android:text="@string/drop_json_file_here"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnPrimaryContainer" />

    </RelativeLayout>

</RelativeLayout>